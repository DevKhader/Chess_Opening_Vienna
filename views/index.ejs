<!DOCTYPE html>
<html>
<head>
  <title>Vienna Gambit Variations</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <h1>Vienna Gambit Variations</h1>
  <form method="POST" action="/add">
    <input type="text" name="title" placeholder="Title" required />
    <input type="text" name="moves" placeholder="e4,e5,Nc3..." required />
    <button type="submit">Add</button>
  </form>
  <ul>
    <% variations.forEach(v => { %>
      <li><a href="/variation/<%= v._id %>"><%= v.title %></a></li>
    <% }) %>
  </ul>
</body>
</html>
